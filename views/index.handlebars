<div class="container">

    <div class="row top-row">
      <div class="col s12 center-align" id="top-bar">
        <img id="burger-image" src="/assets/images/burger.png" alt="burger" />
        <h1>Eat-A-Burger!</h1>
      </div>
    </div>

    <div class="row middle-row">
      <div class="col s6 center-align not-eaten">

        <h3>Burgers that have not been eaten!</h3>

        <div class="row ">

            {{#each burgers}}
              {{#unless this.devoured}}
                <div class="col s9 center-align">
                
                  <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>

                <div class="col s3 center-align">
                  <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                      <input type="hidden" name="devoured" value="1">
                      <button class="btn btn-info pull-right" type="submit">EAT!</button>
                  </form>
                </div>
                
              {{/unless}}
            {{/each}}
        </div>
      
      </div>

      <div class="col-xs-6 text-center eaten">

        <h3>Burgers that have been eaten!</h3>

        <div class="row">

          {{#each burgers}}
            {{#if this.devoured}}
              <div class="col s9 center-align">
                <pre>{{this.id}}. {{this.burger_name}}</pre>
              </div>

              <div class="col s3">
                <form action="burgers/update/{{this.ID}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="0">
                  <button class="btn btn-warning pull-right" type="submit">UN-EAT BURGER</button>
                </form>
              </div>
              
            {{/if}}
          {{/each}}
        </div>
        
      </div>
    </div>

    <h2>Add a burger</h2>
    <form class="create-update-form" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="bg">Burger Name:</label>
        <input type="text" id="bg" name="burgerInput">
      </div>

      <button type="submit">Add Burger</button>
    </form>

    <h2>Delete a burger</h2>

    <ul>
      {{#each burgers}}
          <li>
            {{this.id}}. {{this.burger_name}}

            <form class="delete-form" action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">

              <div class="form-group">
                <label for="brg">id of the burger you want to delete:</label>
                <input type="text" id="brg" name="delete">
              </div>

              <button type="submit">DELETE Burger</button>
            </form>

          </li>
      {{/each}}
    </ul>

</div>




